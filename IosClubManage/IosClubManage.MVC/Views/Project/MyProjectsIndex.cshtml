@model IEnumerable<IosClubManage.MVC.Models.Project>
@{
    ViewBag.Title = "MyProject";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>我的项目列表</h2>

<div class="form-group">
    @using (Html.BeginForm())
    {
        @Html.DropDownList("ProjectStatus", null, "—所有状态—")
        @*@Html.AntiForgeryToken()*@
        @*@Html.TextBox("KeyWords", "", new {})*@
        <input type="submit" value="搜索">
    }

</div>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Single().ProjectCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Single().ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Single().Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Single().Source.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Single().UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Single().ProjectAmmount)
        </th>
        <th>
            当前状态
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectAmmount)
            </td>
            <td>
                @if (item.IsStop)
                {
                    @:已终止
            }
                else
                {
                    if (item.IsKnot)
                    {
                        @:已结项
                }
                   
                        else
                        {
                            if (item.IsApproval)
                            {
                                @:已立项
                        }                            

                        }
                    }
                }

            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IsFinished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsTerminated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFinancialAudited)
                </td>*@

            <td>
                @Html.ActionLink("详细", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>