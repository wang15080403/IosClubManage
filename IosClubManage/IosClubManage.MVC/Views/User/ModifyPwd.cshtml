@model IosClubManage.MVC.ViewModels.VModifyPwd
@{
    ViewBag.Title = "ModifyPwd";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>修改密码</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.LoginId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LoginId, new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.LoginId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pwd)
                @Html.ValidationMessageFor(model => model.Pwd)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewPwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewPwd)
                @Html.ValidationMessageFor(model => model.NewPwd)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RePwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RePwd)
                @Html.ValidationMessageFor(model => model.RePwd)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确定修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>